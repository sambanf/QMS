@model QMS.ViewModel.QDetailViewModel

@using (Html.BeginForm("EditQue", "QMS", FormMethod.Post, new { id = "delete-form", name = "delete-form" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.q_id, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.q_id, new { htmlAttributes = new { @class = "form-control", @id = "inputid", @readonly = "true" } })
            @Html.ValidationMessageFor(model => model.q_no, "", new { @class = "text-danger" })
        </div>
    </div>

    
    <div class="form-group">
        @Html.LabelFor(model => model.q_no, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.q_no, new { htmlAttributes = new { @class = "form-control", @id = "inputno" } })
            @Html.ValidationMessageFor(model => model.q_no, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.q_question, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.q_question, new { htmlAttributes = new { @class = "form-control question", @id = "inputques" } })
            @Html.ValidationMessageFor(model => model.q_question, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input id="submitq" type="submit" value="Done" class="btn btn-default" data-dismiss="modal" />
        </div>
    </div>
</div>
}


<script type="text/javascript">
    $("#submitq").click(function () {
        var data = { q_id: $("#inputid").val(), q_no : $("#inputno").val(), q_question: $("#inputques").val() };
        //alert(JSON.stringify(data))
            $.ajax({
                url: '@Url.Action("EditQue","QMS")',
                type: 'post',
                data: { model : data },
                success: function (result) {
                    GetList();
                }
        });
    });
</script>

